extends layout

block content

    div(class="mdl-layout mdl-js-layout mdl-layout--fixed-header")
        header(class="mdl-layout__header")
            div(class="mdl-layout__header-row")
                span(class="mdl-layout-title") Pull requests

        div(class="mdl-layout__drawer")
            span(class="mdl-layout-title") StandApp
            nav(class="mdl-navigation")
                a(class="mdl-navigation__link" href="/") Resolved issues
                a(class="mdl-navigation__link" href="/pull-requests") Pull requests
                a(class="mdl-navigation__link" href="/stats") Stats

        main(class="mdl-layout__content")
            div(class="page-content")
                each val, index in pullRequests
                    div(class="mdl-card mdl-shadow--4dp")
                        div(class='mdl-card__title')
                            h2(class='mdl-card__title-text')= val.source
                        div(class='mdl-card__supporting-text')
                            p= val.title
                            span(class="caption")= val.author
                        div(class='mdl-card__actions mdl-card--border')
                            a(class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href=val.href) View details
